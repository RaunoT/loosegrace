{
  "name": "loose-grace",
  "version": "1.0.0",
  "author": "Rauno Tegelmann <raunoot@gmail.com>",
  "homepage": "https://rauno.eu",
  "private": true,
  "source": "src/index.html",
  "targets": {
    "default": {
      "distDir": "docs"
    }
  },
  "scripts": {
    "dev": "parcel --open",
    "clean": "rm -rf docs",
    "build:storage": "mkdir docs && cp -r src/static/* docs/",
    "build": "yarn clean && yarn build:storage && parcel build",
    "prettify": "prettier --write \"src/**/*.{html,css}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaunoT/loosegrace.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RaunoT/loosegrace/issues"
  },
  "dependencies": {
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.6.0",
    "@parcel/packager-xml": "^2.6.0",
    "@parcel/transformer-webmanifest": "^2.6.0",
    "@parcel/transformer-xml": "^2.6.0",
    "parcel": "^2.6.0",
    "prettier": "^3.0.3"
  }
}
