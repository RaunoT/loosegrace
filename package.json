{
  "name": "loose-grace",
  "version": "1.0.0",
  "author": "Rauno Tegelmann <raunoot@gmail.com>",
  "homepage": "https://rauno.eu",
  "private": true,
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss css/custom.css -o build/custom.css --watch\"  \"live-server .\"",
    "serve:prod": "cross-env NODE_ENV=production npm run serve",
    "start": "npm run serve",
    "build": "postcss css/custom.css -o build/custom.css",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "lint:css": "stylelint css"
  },
  "dependencies": {
    "autoprefixer": "^9.5.1",
    "tailwindcss": "^1.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "stylelint": "^10.0.1",
    "stylelint-cli": "^1.1.0",
    "stylelint-config-recommended": "^3.0"
  }
}
