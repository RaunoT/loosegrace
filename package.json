{
  "name": "loose-grace",
  "version": "1.0.0",
  "author": "Rauno Tegelmann <raunoot@gmail.com>",
  "homepage": "https://rauno.eu",
  "private": true,
  "source": "src/index.html",
  "targets": {
    "default": {
      "distDir": "docs"
    }
  },
  "scripts": {
    "dev": "parcel --open",
    "clean": "rm -rf docs",
    "build": "yarn clean && yarn build:storage && parcel build",
    "build:storage": "mkdir docs && cp -r src/static/* docs/",
    "lint:css": "stylelint --cache 'src/**/*.css'",
    "format": "prettier --write --cache src",
    "format:check": "prettier --check --cache src",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@parcel/packager-raw-url": "^2.12.0",
    "@parcel/packager-xml": "^2.12.0",
    "@parcel/transformer-webmanifest": "^2.12.0",
    "@parcel/transformer-xml": "^2.12.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "parcel": "^2.12.0",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1"
  }
}
